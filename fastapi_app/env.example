# Environment variables for FastAPI application
# Copy this file to .env and update the values

# Database Configuration
DATABASE_URL=sqlite:///./test.db
# For PostgreSQL: DATABASE_URL=postgresql://username:password@localhost/dbname
# For MySQL: DATABASE_URL=mysql://username:password@localhost/dbname

# JWT Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Configuration
APP_NAME=My FastAPI Application
APP_VERSION=1.0.0
DEBUG=True

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Email Configuration (for future use)
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
